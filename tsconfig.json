{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["es2019", "dom"],
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./typings", "./node_modules/@types", "src/@types"],
    "esModuleInterop": true,
    "moduleResolution": "NodeNext"
  },
  "exclude": ["contrib"]
}
